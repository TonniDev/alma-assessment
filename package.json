{
  "name": "alma-assessment",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "next build",
    "dev": "NODE_OPTIONS='--inspect' next dev",
    "start": "next start",
    "vercel-build": "prisma generate && prisma migrate deploy && next build",
    "migration:create:dev": "prisma migrate dev --create-only",
